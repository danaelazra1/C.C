<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>C&C</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="c&c.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link href="c&c.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
  <body>
   <p> WELCOME TO COOKIES & COFFEE </p>
   <div class="card-weather">
    <img src="" class="weather-icon">
    <h1 class="temp"></h1>
    <h2 class="city"></h2>
   </div>
   <div class="container">
        <header class="row justify-content-md-center ">
            <div class="col-6 p-3">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Find your favorite cookie next to your coffee..." aria-label="Recipient's username" aria-describedby="basic-addon2">
                    <span class="input-group-text" id="basic-addon2"><i class="bi bi-cup-hot" style="color: #5a3a0d;"></i></span>
                  </div>
            </div>

        </header>
        <main class="row g-12">
            <div class="col-lg-3">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  <% if(Cust != null){ %>
                    <div>Hello <%= Cust.Name %>
                    <button class="btn btn-primary"><a href="/logout" >Logout</a> </button>
                    </div>
                     <% }else{ %>
                      <a href="/login">Login</a>
                       <% }%>
                </li>
                <!-- <li class="list-group-item">sort by</a></li> -->
               <!--  <li class="list-group-item">
                    <div class="list-group">
                        <a href="/amsterdam" class="list-group-item list-group-item-action">Amsterdam cookies</a>
                        <a href="/m&m" class="list-group-item list-group-item-action">M & M cookies</a>
                        <a href="/chocolate" class="list-group-item list-group-item-action">Chocolate chips cookies</a>
    
                    </div> -->
                </li>
                <li class="list-group-item">
                  <a href="/maps">Maps</a>
              </li>
              <li class="list-group-item">
                <a href="/cart">Shopping cart <i class="bi bi-cart"></i></a>
            </li>
            <li class="list-group-item">
              <input type="checkbox" value="Price" name="price">
          </li>
            </ul>
           </div>
           <div class="col">
            <!-- <div class="row">
                <button class="btn btn-secondary col-2 m-2">All</button>
                <button class="btn btn-light col-2 m-2">Favourites</a></button>
              
            </div> -->
                 <div class="row">
                    			
            <% Products.forEach(function(product){ %>
	            <div class="card col-sm-6 col-md-4 col-lg-4">
                        <img src=<%= product.Picture %> class="card-img-top">
                     <div class="card-body">
                          <h5 class="card-title"><%= product.ProductName%> : <%= product.Price%>â‚ª </h5>
                          <p class="card-text"> <%= product.Description %></p>
                                               <br/>  
                         <form> 
                          <!-- action="/newProduct" method="post" -->
                            <!-- <input type="hidden" name='productID'  > -->
                          <button value=<%= product._id%> type="submit" class="btn btn-primary">Add to cart  <i class="bi bi-cart"></i></button>
                        </form>
                      </div>
	</div>
                                      <%  })%>

           </div>
          </main>
     </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
  </body>
</html>